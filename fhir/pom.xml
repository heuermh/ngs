<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <packaging>jar</packaging>
  <parent>
    <groupId>org.nmdp.ngs</groupId>
    <artifactId>ngs-multimodule</artifactId>
    <version>1.9-SNAPSHOT</version>
  </parent>
  <artifactId>ngs-fhir</artifactId>
  <name>ngs-fhir</name>
  <description>Mapping for FHIR XSDs.</description>
  <dependencies>
    <dependency>
      <groupId>com.google.code.findbugs</groupId>
      <artifactId>jsr305</artifactId>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>xml-maven-plugin</artifactId>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <goals>
              <goal>transform</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <transformationSets>
            <transformationSet>
              <dir>src/main/xsd</dir>
              <includes>
                <include>FHIRPublicData.xsd</include>
                <include>FHIRPublicData.xjb</include>
              </includes>
              <outputDir>target/classes/org/nmdp/ngs/fhir/xsd</outputDir>
              <stylesheet>src/main/xsd/fix-fhir-xsd.xsl</stylesheet>
            </transformationSet>
          </transformationSets>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.cxf</groupId>
        <artifactId>cxf-xjc-plugin</artifactId>
        <executions>
          <execution>
            <id>generate-sources</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>xsdtojava</goal>
              <goal>xsdtojava-tests</goal>
            </goals>
            <configuration>
              <xsdOptions>
                <xsdOption>
                  <xsd>target/classes/org/nmdp/ngs/fhir/xsd/FHIRPublicData.xsd</xsd>
                  <bindingFile>target/classes/org/nmdp/ngs/fhir/xsd/FHIRPublicData.xjb</bindingFile>
                  <packagename>org.nmdp.ngs.fhir.jaxb</packagename>
                  <extension>true</extension>
                </xsdOption>
              </xsdOptions>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
